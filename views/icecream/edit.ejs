<% include ../partials/header %>




<div class="container">

  <form action="/icecreams/<%=icecream.id%>?_method=put" method="POST">
    <h1>Add an Icecream</h1>

    <div class="input-group">
      <span class="input-group-addon">Flavor</span>
      <input type="text" class="form-control" name="icecream[flavor]" value="<%= icecream.flavor %>">
    </div>

    <div class="input-group">
      <span class="input-group-addon">Description</span>
      <input type="text" class="form-control" name="icecream[description]" value="<%= icecream.description %>">
    </div>

    <div class="input-group">
      <span class="input-group-addon">Image Url</span>
      <input type="text" class="form-control" name="icecream[imageUrl]" value="<%= icecream.imageUrl %>">
    </div>
    
    <div class="input-group">
      <input type="submit" class="btn btn-default">
    </div>

  </form>

</div>






<% include ../partials/footer %>